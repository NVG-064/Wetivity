<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_recommendation"
    tools:context=".Recommendation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="60dp"
            android:text="Which goal you want to reach?"
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            android:fontFamily="@font/poppins_medium"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="60dp">

            <CheckBox
                android:id="@+id/btn_healthy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:minHeight="140dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:layout_marginHorizontal="16dp"
                android:button="@null"
                android:background="@drawable/checkbox_outline"
                app:cardBackgroundColor="@color/transparan"
                android:drawableTop="@drawable/btn_healthy"
                app:cardElevation="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Healthy"/>

            <CheckBox
                android:id="@+id/btn_softskill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:minHeight="140dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:layout_marginHorizontal="16dp"
                android:button="@null"
                android:background="@drawable/checkbox_outline"
                app:cardBackgroundColor="@color/transparan"
                android:drawableTop="@drawable/btn_softskill"
                app:cardElevation="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Soft-skills"/>

            <CheckBox
                android:id="@+id/btn_smallworkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:minHeight="140dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:layout_marginHorizontal="16dp"
                android:button="@null"
                android:background="@drawable/checkbox_outline"
                app:cardBackgroundColor="@color/transparan"
                android:drawableTop="@drawable/btn_smallworkout"
                app:cardElevation="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Small\nWorkout"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <CheckBox
                android:id="@+id/btn_coding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:minHeight="140dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:layout_marginHorizontal="16dp"
                android:button="@null"
                android:background="@drawable/checkbox_outline"
                app:cardBackgroundColor="@color/transparan"
                android:drawableTop="@drawable/btn_coding"
                app:cardElevation="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Coding"/>

            <CheckBox
                android:id="@+id/btn_painting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:minHeight="140dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:layout_marginHorizontal="16dp"
                android:button="@null"
                android:background="@drawable/checkbox_outline"
                app:cardBackgroundColor="@color/transparan"
                android:drawableTop="@drawable/btn_painting"
                app:cardElevation="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Painting"/>

            <CheckBox
                android:id="@+id/btn_fotograph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:minHeight="140dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:layout_marginHorizontal="16dp"
                android:button="@null"
                android:background="@drawable/checkbox_outline"
                app:cardBackgroundColor="@color/transparan"
                android:drawableTop="@drawable/btn_photograph"
                app:cardElevation="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Fotograph"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <CheckBox
                android:id="@+id/btn_gaming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:minHeight="140dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:layout_marginHorizontal="16dp"
                android:button="@null"
                android:background="@drawable/checkbox_outline"
                app:cardBackgroundColor="@color/transparan"
                android:drawableTop="@drawable/btn_gaming"
                app:cardElevation="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Gaming"/>

            <CheckBox
                android:id="@+id/btn_fashion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:minHeight="140dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:layout_marginHorizontal="16dp"
                android:button="@null"
                android:background="@drawable/checkbox_outline"
                app:cardBackgroundColor="@color/transparan"
                android:drawableTop="@drawable/btn_fashion"
                app:cardElevation="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Fashion"/>

            <CheckBox
                android:id="@+id/btn_cooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:minHeight="140dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:layout_marginHorizontal="16dp"
                android:button="@null"
                android:background="@drawable/checkbox_outline"
                app:cardBackgroundColor="@color/transparan"
                android:drawableTop="@drawable/btn_cooking"
                app:cardElevation="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Cooking"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <CheckBox
                android:id="@+id/btn_dancer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:minHeight="140dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:layout_marginHorizontal="16dp"
                android:button="@null"
                android:background="@drawable/checkbox_outline"
                app:cardBackgroundColor="@color/transparan"
                android:drawableTop="@drawable/btn_dancer"
                app:cardElevation="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Dancer"/>

            <CheckBox
                android:id="@+id/btn_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:minHeight="140dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:layout_marginHorizontal="16dp"
                android:button="@null"
                android:background="@drawable/checkbox_outline"
                app:cardBackgroundColor="@color/transparan"
                android:drawableTop="@drawable/btn_business"
                app:cardElevation="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Business"/>

            <CheckBox
                android:id="@+id/btn_influencer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:minHeight="140dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:layout_marginHorizontal="16dp"
                android:button="@null"
                android:background="@drawable/checkbox_outline"
                app:cardBackgroundColor="@color/transparan"
                android:drawableTop="@drawable/btn_influencer"
                app:cardElevation="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Influencer"/>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#FFE73A"
        android:layout_margin="24dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="24sp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@+id/fourthlinebutton"
        tools:layout_editor_absoluteX="24dp"
        android:fontFamily="@font/poppins_medium"/>

</LinearLayout>